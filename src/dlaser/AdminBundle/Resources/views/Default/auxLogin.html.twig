{% extends "AdminBundle::admin_layout.html.twig" %}


{% block stylesheets %}
	{{ parent() }}	
	<link href="{{ asset('bundles/dlaser/css/overcast/jquery-ui-1.10.1.custom.css') }}" rel="stylesheet" type="text/css" />	 
{% endblock %}


{% block cuerpo %}

<div id="login_form">
	
	<form action="{{ path("aux_login_check") }}" method="post" id="login">
	   
		<h1>Iniciar sesión</h1>
		
	    <div class="formbody">
	    	
	    	{% if error %}
			    <div class="error_box">{{ error.message }}</div>
			{% endif %}
	    
	        <label for="username">Usuario</label><br />
	        	<input autocapitalize="off" autofocus="autofocus" class="text" id="username" name="_username" value="{{ last_username }}" style="width: 15em;" tabindex="1" type="text" /><br />
	        
	        <label for="password">Contraseña</label><br />
		        <input autocomplete="disabled" class="text" id="password" name="_password" style="width: 15em;" tabindex="2" type="password" value="" />
		        <input type="hidden" name="_target_path" value="/welcome" /><br />
	        
	
	        <label class='submit_btn'>
	        	<input name="commit" tabindex="3" type="submit" value="Sign in" />
	        </label><br/>
	        
	       <!-- <a href="#" class="#" id="contrasena">¿No puedes acceder a tu cuenta?</a> --> 
	    </div>
	</form>    
</div>


{% endblock %}