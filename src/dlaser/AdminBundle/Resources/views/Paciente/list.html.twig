{% extends "AdminBundle::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('AdminBundle:Builder:adminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Listado de pacientes{% endblock %}


{% block cuerpo %}

<form action="{{ path('paciente_search') }}"  class="form-search" method="post" {{ form_enctype(form) }}>
    <fieldset>
    	<legend>Busqueda</legend>    	
    	
    	<div class="input-append">	    	
	    	{{ form_errors(form.nombre) }}
	    	{{ form_widget(form.nombre) }}
	    	{{ form_errors(form.option) }}
    		{{ form_widget(form.option) }}
	    	<button class="btn btn-success" type="submit">Buscar</button>
    	</div>	
    	
    	{{ form_rest(form) }}
    </fieldset>        
</form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>No.</th>
                <th>Identificación</th>
                <th>Nombre</th>
                <th>Opción</th>
            </tr>
        </thead>
        <tbody>
	        <tr>
	        	<td colspan='4'>
		        	<div class="btn-group" data-toggle="buttons-radio">
					<a class="btn btn-info" href="{{ path('paciente_list', {'char':'A'}) }}">A</a>
					<a class="btn btn-info" href="{{ path('paciente_list', {'char':'B'}) }}">B</a><a class="btn btn-info" href="{{ path('paciente_list', {'char':'C'}) }}">C</a>
					<a class="btn btn-info" href="{{ path('paciente_list', {'char':'D'}) }}">D</a><a class="btn btn-info" href="{{ path('paciente_list', {'char':'E'}) }}">E</a><a  class="btn btn-info"  href="{{ path('paciente_list', {'char':'F'}) }}">F</a>
                                        <a class="btn btn-info" href="{{ path('paciente_list', {'char':'G'}) }}">G</a><a class="btn btn-info" href="{{ path('paciente_list', {'char':'H'}) }}">H</a><a  class="btn btn-info"  href="{{ path('paciente_list', {'char':'I'}) }}">I</a>
                                        <a class="btn btn-info" href="{{ path('paciente_list', {'char':'J'}) }}">J</a><a class="btn btn-info" href="{{ path('paciente_list', {'char':'K'}) }}">K</a><a  class="btn btn-info"  href="{{ path('paciente_list', {'char':'L'}) }}">L</a>
                                        <a class="btn btn-info" href="{{ path('paciente_list', {'char':'M'}) }}">M</a><a class="btn btn-info" href="{{ path('paciente_list', {'char':'N'}) }}">N</a><a  class="btn btn-info"  href="{{ path('paciente_list', {'char':'O'}) }}">O</a>
                                        <a class="btn btn-info" href="{{ path('paciente_list', {'char':'P'}) }}">P</a><a class="btn btn-info" href="{{ path('paciente_list', {'char':'Q'}) }}">Q</a><a  class="btn btn-info"  href="{{ path('paciente_list', {'char':'R'}) }}">R</a>
                                        <a class="btn btn-info" href="{{ path('paciente_list', {'char':'S'}) }}">S</a><a class="btn btn-info" href="{{ path('paciente_list', {'char':'T'}) }}">T</a><a  class="btn btn-info"  href="{{ path('paciente_list', {'char':'U'}) }}">U</a>
                                        <a class="btn btn-info" href="{{ path('paciente_list', {'char':'V'}) }}">V</a><a class="btn btn-info" href="{{ path('paciente_list', {'char':'W'}) }}">W</a><a  class="btn btn-info"  href="{{ path('paciente_list', {'char':'X'}) }}">X</a>
                                        <a class="btn btn-info" href="{{ path('paciente_list', {'char':'Y'}) }}">Y</a><a class="btn btn-info" href="{{ path('paciente_list', {'char':'Z'}) }}">Z</a>
                                </div>
                        </td>
	    	</tr>
	        {% for entity in entities %}
	            <tr>
	                <td>{{ loop.index }}</td>
	                <td><a class="btn btn-link" href="{{ path('paciente_show', {'id':entity.id}) }}">{{ entity.identificacion }}</a></td>
	                <td>{{ entity.priNombre }} {{ entity.segNombre }} {{ entity.priApellido }} {{ entity.segApellido }}</td>
	                <td><a class="btn" href="{{ path('informe_tipo_paciente', {'paciente':entity.id}) }}"><i class="icon-list"></i>Informe</a></td>
	            </tr>
	         {% else %}
	         	<tr>
	         		<td colspan="3">No tenemos pacientes creados.</td>
	         	</tr>
        {% endfor %}
        </tbody>
    </table>   
    
    <a href="{{ path('paciente_new') }}" class="btn">Nuevo paciente</a>
    
     {% if entities %}
		{{ knp_pagination_render(entities) }}
    {% endif %}
    
{% endblock %}
