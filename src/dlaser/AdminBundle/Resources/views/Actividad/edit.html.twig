{% extends "AdminBundle::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('AdminBundle:Builder:adminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Modificar actividad contratada{% endblock %}



{% block cuerpo %}

<form action="{{ path('actividad_update', { 'contrato': entity.contrato.id, 'cargo': entity.cargo.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <fieldset>
    	<legend>Datos del contrato</legend>
    	{{ form_widget(edit_form) }}
    </fieldset>
    
    <button class="btn btn-success" type="submit">
        <span class="label">Modificar</span>
    </button>
    <a href="{{ path('actividad_show', {'contrato': entity.contrato.id, 'cargo': entity.cargo.id}) }}" class="btn"><span class="label">Detalle de la actividad</span></a>
    
</form>
{% endblock %}