{% extends "AdminBundle::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('AdminBundle:Builder:adminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Listado de procedimientos{% endblock %}



{% block cuerpo %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>No.</th>
                <th>Código</th>
                <th>Nombre</th>
                <th>Indicación</th>
                <th>Valor</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><a class="btn btn-link" href="{{ path('cargo_show', {'id':entity.id}) }}">{{ entity.cups }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.indicacion }}</td>
                <td>${{ entity.valor | number_format(0, ',', '.')}}</td>
            </tr>
         {% else %}
         	<tr>
         		<td colspan="4">No tenemos procedimientos creados.</td>
         	</tr>
        {% endfor %}
        </tbody>
    </table>
    
		{% if entities %}
			{{ knp_pagination_render(entities) }}
    	{% endif %}
    
    <a href="{{ path('cargo_new') }}" class="btn">Nuevo procedimiento</a>    
    
{% endblock %}
