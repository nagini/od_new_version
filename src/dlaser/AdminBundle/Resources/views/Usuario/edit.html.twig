{% extends "AdminBundle::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('AdminBundle:Builder:adminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Modificar usuario{% endblock %}


{% block cuerpo %}

<form action="{{ path('usuario_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <fieldset>
    	<legend>Datos del usuario</legend>
    	{{ form_widget(edit_form) }}
    </fieldset>
    
    <button class="btn btn-success" type="submit">
        <span class="label">Modificar</span>
    </button>
    <a href="{{ path('usuario_show', {'id': entity.id}) }}" class="btn"><span class="label">Detalles del usuario</span></a>
    
</form>
{% endblock %}
