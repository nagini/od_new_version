{% extends "AdminBundle::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('AdminBundle:Builder:adminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Detalles del usuario{% endblock %}


{% block cuerpo %}

    <table class="table table-hover">
        <tbody>
         <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
         </tr>
         <tr>
            <th>Apellido</th>
            <td>{{ entity.apellido }}</td>
         </tr>
         <tr>
            <th>Cedula</th>
            <td>{{ entity.cc }}</td>
         </tr>
         <tr>
            <th>Perfil</th>
            <td>{{ entity.perfil }}</td>
         </tr>
         <tr>
            <th>Telefono</th>
            <td>{{ entity.telefono }}</td>
         </tr>
         <tr>
            <th>Direccion</th>
            <td>{{ entity.direccion }}</td>
         </tr>
         <tr>
            <th>TProfecional</th>
            <td>{{ entity.tp }}</td>
         </tr>
         <tr>
            <th>Espesialidad</th>
            <td>{{ entity.especialidad }}</td>
         </tr>         
        </tbody>
    </table>
    
    
    <a href="{{ path('usuario_edit', { 'id': entity.id }) }}" class="btn">Modificar usuario</a>
    <a href="{{ path('usuario_list') }}" class="btn">Regresar al listado</a>
    
    {%if entity.perfil == 'ROLE_DISABLE'%}
        <a href="{{ path('usuario_enable', {'usuario': entity.id})}}" class="btn btn-warning">Habilitar</a>
        {% else %}
            <a href="{{ path('usuario_disable', {'usuario': entity.id})}}" class="btn btn-danger">Inhabilitar</a>
    {%endif%}
    
    
    <h2>Permisos del usuario</h2>  
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>No.</th>
                <th>Nombre</th>
                <th>Ciudad</th>
            </tr>
        </thead>
        <tbody>
        {% for sede in sedes %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ sede.nombre }}</td>
                <td>{{ sede.ciudad }}</td>
            </tr>
         {% else %}
         	<tr>
         		<td colspan="3">No tenemos sedes creadas.</td>
         	</tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('permiso_new', { 'id': entity.id }) }}" class="btn">Asignar sedes</a>
{% endblock %}
    
