{% extends "AdminBundle::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('AdminBundle:Builder:adminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Factura de venta{% endblock %}



{% block cuerpo %}

<table>
	<tbody>
		<tr>
			<td>Fecha:</td>
			<td>{{ date('now')|date('d/m/Y') }}</td>
		</tr>
		<tr>
			<td>Empresa:</td>
			<td>{{ cliente.nombre}}</td>
		</tr>
		<tr>
			<td>Nit:</td>
			<td>{{ cliente.nit}}</td>
		</tr>
		<tr>
			<td>Dirección:</td>
			<td></td>
		</tr>
		<tr>
			<td>Teléfono:</td>
			<td></td>
		</tr>
	</tbody>
</table>

<form action="{{ path('factura_final_save', {'cliente': cliente.id, 'sede': sede.id}) }}" onSubmit="return confirm('Seguro de querer generar la factura?');" method="post">
    <fieldset>
    	<legend>Datos de la factura</legend>
    
    	{{ form_widget(form) }}
    </fieldset>
    
    <button class="btn btn-success" type="submit">Generar</button>
    
</form>
	      		
{% endblock %}