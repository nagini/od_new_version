{% extends "AdminBundle::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('AdminBundle:Builder:adminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Modificar restricción{% endblock %}


{% block cuerpo %}

<form action="{{ path('restriccion_update', { 'id': entity.id, 'agenda' : agenda }) }}" method="post" {{ form_enctype(edit_form) }}>
    <fieldset>
    	<legend>Datos de la restricción</legend>
    	{{ form_widget(edit_form) }}
    </fieldset>
    
    <button class="btn btn-success" type="submit">
        Modificar
    </button>
    <a href="{{ path('agenda_show', {'id': entity.id}) }}" class="btn">Detalle de la agenda</a>    
</form>
{% endblock %}